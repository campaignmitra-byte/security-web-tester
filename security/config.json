{
  "target": {
    "base_url": "http://localhost:8000"
  },
  "gates": {
    "fail_on_critical": true,
    "fail_on_high": true
  },
  "commands": {
    "sast": [
      "semgrep --config=auto --json --output security/reports/semgrep.raw.json ."
    ],
    "sca": [
      "pip-audit -f json -o security/reports/pip-audit.raw.json"
    ],
    "dast": [
      "echo '{\"findings\":[]}' > security/reports/dast.raw.json"
    ],
    "api_fuzz": [
      "echo '{\"findings\":[]}' > security/reports/api-fuzz.raw.json"
    ]
  }
}
